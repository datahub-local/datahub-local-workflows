{
    "servers": {
        "task-master-ai": {
            "command": "zsh",
            "args": [
                "-c",
                "(. ~/.zshrc || true && copilot_api_start) > /dev/null 2>&1 && npx -y --package=task-master-ai task-master-ai"
            ],
            "env": {
                "ANTHROPIC_BASE_URL": "http://localhost:4141",
                "ANTHROPIC_AUTH_TOKEN": "dummy",
                "ANTHROPIC_MODEL": "gpt-5-mini",
                "ANTHROPIC_SMALL_FAST_MODEL": "gpt-4.1"
            }
        }
    }
}